
@using Model.ViewModels.Invoice;

@model VmInvoiceManagement
@{
    ViewBag.Title = Model["Your Invoices"];
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


    <table class="table table-striped table-condensed table-bordered">

        <tr>
            <th>
                <small class="font-weight-bold"> @Model["View Detail"]</small>
            </th>
            <th>
                <small class="font-weight-bold"> @Model["Invoice No"]</small>
            </th>
            <th>
                <small class="font-weight-bold"> @Model["Amount Due"]</small>
            </th>
            <th>
                <small class="font-weight-bold"> @Model["Date"]</small>
            </th>
            <th>
                <small class="font-weight-bold"> @Model["State"]</small>
            </th>

        </tr>
        @foreach (var item in Model.rows)
        {
            <tr>
                <td>
                    <a href="/order/lid/@item.Id" class="no-link">
                        <i class="fa fa-list">

                        </i>
                    </a>
                </td>
                <td>
                    <small class="">@item.Id</small>
                </td>
                <td>
                    <small class="" id="AmountDue">@item.AmountDue</small>
                </td>
                <td>
                    <div class="row text-center">
                        <small class="p-1">@item.StringDate</small>

                    </div>

                </td>
                <td>
                    <small class="" id="TransactionNo">@item.State </small>
                </td>

            </tr>


        }

    </table>
 
<script>
    $(document).ready(function () {

    });

</script>
