@using WebShop.Models
@model LoginViewModel
@{
    ViewBag.Title = @Model["Login"];
}

<div class="hidden-xs col-sm-4"></div>

<div class="col-12  col-sm-4">
    @* @class = "form-horizontal"*@
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <h4><b>WebShop @Model["Login"]</b></h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            @Html.Label(@Model["Phone Number"], new { @class = "col-12  control-label" })
            <div class="col-12">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @* @Html.ValidationMessageFor(m => m.Email, @Model["E-Mail"], new { @class = "text-danger" }, "*")*@
            </div>
        </div>

        <div class="form-group row">
            @Html.Label(@Model["Password"], new { @class = "col-12 control-label" })
            <div class="col-12">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessage(@Model["Password"], @Model["The Password Is Required."], new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-6 col-12">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "text-danger remember-me" })
                @Html.Label(@Model["Remember Me?"])
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary col-6 login-button">
                    <i class="fa fa-sign-in icon-size-1-3"></i>
                    <span class="">@Model["Login"]</span>
                </button>
                <a href="/Account/Register" class="btn btn-primary col-6 login-button">
                    <i class="fa fa-user-plus icon-size-1-3"></i>
                    <span class="">@Model["Register"]</span>
                </a>
                @Html.ActionLink(@Model["Forgot Password?"], "ForgotPassword", "Account", new { @class = "btn btn-danger col-12 login-button" })
            </div>
        </div>
    }
</div>
<div class="hidden-xs col-sm-4"></div>
 
